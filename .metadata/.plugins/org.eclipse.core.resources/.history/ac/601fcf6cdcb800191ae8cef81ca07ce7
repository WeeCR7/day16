<!DOCTYPE html>
<html>
	<head>
		<style type="text/css">
			#fm {
				margin: 0;
				padding: 10px 30px;
			}

			.ftitle {
				font-size: 14px;
				font-weight: bold;
				padding: 5px 0;
				margin-bottom: 10px;
				border-bottom: 1px solid #ccc;
			}

			.fitem {
				margin-bottom: 5px;
			}

			.fitem label {
				display: inline-block;
				width: 80px;
			}

			.fitem input {
				width: 160px;
			}
		</style>
		<meta charset="utf-8">
		<title>用户信息表</title>
		<link rel="stylesheet" type="text/css" href="easyui_lib/themes/default/easyui.css" />
		<link rel="stylesheet" type="text/css" href="easyui_lib/themes/icon.css" />
		<link rel="stylesheet" type="text/css" href="easyui_lib/themes/color.css" />
		<link rel="stylesheet" type="text/css" href="easyui_lib/demo/demo.css" />
		<script src="easyui_lib/jquery.min.js"></script>
		<script src="easyui_lib/jquery.easyui.min.js"></script>
		<script src="easyui_lib/jquery.edatagrid.js"></script>
		<script src="easyui_lib/locale/easyui-lang-zh_CN.js"></script>
		<script>
			var url;//保存或更新地址
			
			
			$(function() {
				$("#dg").datagrid({
					method: 'get',
					url: '/user/findUserInfo.do',
					fitColumns:true,
					pagination: true,
					pageSize: 3,
					pageList: [3, 6, 12],
					columns: [
						[{
								field: 'id',
								title: '编号',
								width: 100,
								align: 'center',
								halign: 'center',
								editor: {
									type: 'easyui-validatebox'
								}
							},
							{
								field: 'name',
								title: '姓名',
								width: 100,
								align: 'center',
								halign: 'center',
								editor: {
									type: 'easyui-validatebox',
								}
							},
							{
								field: 'sex',
								title: '性别',
								width: 100,
								align: 'center',
								halign: 'center',
								formatter: function(value, row, index) {
									if (value == "0") {
										return value = "男";
									}
									if (value == "1") {
										return value = "女";
									}
									return value;
								},
								editor: {
									type: 'easyui-validatebox'
								}
							},
							{
								field: 'e_mail',
								title: '邮箱',
								width: 100,
								align: 'center',
								halign: 'center',
								editor: {
									type: 'easyui-validatebox'
								}
							}, {
								field: 'username',
								title: '用户名',
								width: 100,
								align: 'center',
								halign: 'center',
								formatter: function(value, row, rowIndex) {
									if (row.user != undefined) {
										return row.user.username;
									}
								},
								editor: {
									type: 'easyui-validatebox',
								}
							},
							{
								field: 'password',
								title: '密码',
								width: 100,
								align: 'center',
								halign: 'center',
								formatter: function(value, row, rowIndex) { //解决嵌套查询，数据在datagrid中显示问题
									if (row.user != undefined) {
										return row.user.password;
									}
								},
								editor: {
									type: 'easyui-passwordbox',
								}
							}
						]
					]
				})
			})
			
			//查询用户
			function doSearch(pageNumber, pageSize) {
				$('#dg').datagrid('load', {
					'name': $('#search').val()

				});
			}

			function reset() {
				$('#dg').datagrid('reload', {});
			};
			
			//新增用户
			function newUser() {
				$('#dlg').dialog('open').dialog('setTitle', 'New User');
				$('#fm').form('clear');
				url = '/ssm/user/insertUser.do'; //保存地址
			}
			
			
			//编辑用户
			/* function editUser() {
				var row = $('#dg').datagrid('getSelected');
				if (row) {
					$('#dlg').dialog('open').dialog('setTitle', 'Edit User');
					$('#fm').form('load', row);
					//url = 'update_user.php?id=' + row.id;
				}
			} */

			//保存用户
			function saveUser() {
				$('#fm').form('submit', {
					url: url,
					onSubmit: function() {
						return $(this).form('validate');
					},
					success: function(result) {
						var result = eval('(' + result + ')');
						if (result) {
							$('#dlg').dialog('close'); // close the dialog
							$('#dg').datagrid('reload'); // reload the user data
						} else {
							$.messager.show({
								title: 'Error',
								msg: '用户名重名，请重新输入用户名和密码'
							});
						}
					}
				}); 
			}
			
			
			//删除用户
			function destroyUser() {
				var row = $('#dg').datagrid('getSelected');
				if (row) {
					$.messager.confirm('Confirm', '你确定要删除该用户吗?', function(r) {
						if (r) {
							$.post('/ssm/user/deleteUser.do', {    
								id: row.id
							}, function(result) {
								if (result) {
									$('#dg').datagrid('reload'); // reload the user data
								} else {
									$.messager.show({ // show error message
										title: 'Error',
										msg: result.errorMsg
									});
								}
							}, 'json');
						}
					});
				}
			}
		</script>
	</head>
	<body>
		<div id="" style="padding: 10px; background-color: lightgray;">
			<a href="#" class="easyui-linkbutton" iconCls="icon-add" plain="true" onclick="newUser()">New User</a>
			<!-- <a href="#" class="easyui-linkbutton" iconCls="icon-edit" plain="true" onclick="editUser()">Edit User</a> -->
			<a href="#" class="easyui-linkbutton" iconCls="icon-remove" plain="true" onclick="destroyUser()">Remove User</a>
		<!-- 	<a href="#" class="easyui-linkbutton" iconCls="icon-undo" plain="true" onclick="javascript:$('#dg').datagrid('cancelRow')">Cancel</a> -->
			<a href="#" class="easyui-linkbutton" iconCls="icon-reload" plain="true" onclick="reset()">Reset</a>
			<input id="search" class="easyui-textbox" />
			<a href="#" class="easyui-linkbutton" iconCls="icon-search" plain="true" onclick="doSearch()">Search</a>
		</div>



		<!--创建表格对话框-->
		<div id="dlg" class="easyui-dialog" style="width:400px;height:280px;padding:10px 20px" closed="true" buttons="#dlg-buttons">
			<div class="ftitle">新增用户</div>
			<form id="fm" method="post">
				<div class="fitem">
					<label>用户名:</label>
					<input name="username" class="easyui-textbox">
				</div>
				<div class="fitem">
					<label>密码:</label>
					<input name="password" class="easyui-textbox">
				</div>
				<div class="fitem">
					<label>权限:</label>
					<input name="authority" class="easyui-textbox">
				</div>
			</form>
		</div>
		<div id="dlg-buttons">
			<a href="#" class="easyui-linkbutton" iconCls="icon-ok" onclick="saveUser()">Save</a>
			<a href="#" class="easyui-linkbutton" iconCls="icon-cancel" onclick="javascript:$('#dlg').dialog('close')">Cancel</a>
		</div>



		<table id="dg">
		</table>
	</body>
</html>
