<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<title>员工信息表</title>
		<script src="easyui_lib/jquery.min.js"></script>
		<script src="easyui_lib/jquery.easyui.min.js"></script>
		<script src="easyui_lib/jquery.edatagrid.js"></script>
		<script src="easyui_lib/locale/easyui-lang-zh_CN.js"></script>
		<link rel="stylesheet" type="text/css" href="easyui_lib/themes/default/easyui.css" />
		<link rel="stylesheet" type="text/css" href="easyui_lib/themes/icon.css" />
		<script>
			var rowindex = 0;
			$(function() {
				$("#dg").edatagrid({
					//updateUrl: '/ssm/employee/update.do',
					idField: 'eno',
					columns: [
						[{
								field: 'eno',
								title: '工号',
								width: 100,
								align: 'center',
								halign: 'center',
								editor: {
									type: 'easyui-validatebox'
								}
							},
							{
								field: 'username',
								title: '用户名',
								width: 100,
								align: 'center',
								halign: 'center',
								editor: {
									type: 'validatebox',
									options: {
										required: true
									}
								}
							},
							{
								field: 'ename',
								title: '真实姓名',
								width: 100,
								align: 'center',
								halign: 'center',
								editor: {
									type: 'validatebox',
									options: {
										required: true,
										validType: ['myvalid', 'length[2,4]']
									}
								}
							},
							{
								field: 'sex',
								title: '性别',
								width: 100,
								align: 'center',
								halign: 'center',
								formatter: function(value, row, index) {
									if (value == "0") {
										return value = "男";
									}
									if (value == "1") {
										return value = "女";
									}
									return value;
								},
								editor: {
									type: 'combobox',
									options: {
										valueField: 'id',
										textField: 'text',
										method: 'get',
										url: 'data/sexdata.json'
									},
								}
							},
							{
								field: 'first',
								title: '一级',
								width: 100,
								align: 'center',
								halign: 'center',
								formatter: function(value, row, index) {
									if (value == "0") {
										return value = "请选择省份";
									}
									if (value == "1") {
										return value = "湖北";
									}
									if (value == "2") {
										return value = "广东";
									}
									return value;
								},
								editor: {
									type: 'combobox',
									options: {
										valueField: 'id',
										textField: 'text',
										method: 'get',
										url: 'data/data1.json',
										required: true,
										onSelect: function(data) {
											var row = $('#dg').datagrid(
												'getSelected');
											var rowIndex = $('#dg').datagrid(
												'getRowIndex', row); //获取行号 
											var thisTarget = $('#dg').datagrid(
												'getEditor', {
													'index': rowIndex,
													'field': 'first'
												}).target;
											var value = thisTarget
												.combobox('getValue');
											var target = $('#dg').datagrid(
												'getEditor', {
													'index': rowIndex,
													'field': 'second'
												}).target;
											target.combobox('clear'); //清除原来的数据 
											target.combobox('loadData',
												data.country);
										}
									}
								}
							}, {
								field: 'second',
								title: '二级',
								width: 100,
								align: 'center',
								halign: 'center',
								formatter: function(value, row, index) {
									if (value == "01") {
										return value = "请选择城市";
									}
									if (value == "11") {
										return value = "武汉";
									}
									if (value == "12") {
										return value = "孝感";
									}
									if (value == "13") {
										return value = "黄石";
									}
									if (value == "21") {
										return value = "广州";
									}
									if (value == "22") {
										return value = "东莞";
									}
									if (value == "23") {
										return value = "惠州";
									}
									return value;
								},
								editor: {
									type: 'combobox',
									options: {
										valueField: 'id',
										textField: 'text',
										method: 'get',
										required: true,
									}
								}
							}
						]
					],
					onAfterEdit: function(rowIndex, rowData, changes) {
						console.log(rowData);
						insert(rowData);
					},
					onBeforeEdit: function(rowIndex, rowData) {
						rowindex = rowIndex;
					}
				})
			})


			function save() {
				$('#dg').edatagrid('endEdit', rowindex);
			}

			//插入
			function insert(row) {
				var url = '/ssm/employee/insert.do'
				if (row) {
					$.ajax({
						type: 'POST',
						url: url,
						data: row,
						dataType: "json",
						success: function(result) {
							if (result) {
								$('#dg').edatagrid('saveRow')
							} else {
								alert('用户已存在，重新输入用户名!');
								$('#dg').datagrid('reload')
							}
						}
					})
				}
				save();
			}

			function reset() {
				$('#dg').datagrid('reload', {});
			};

			//自定义验证
			$.extend($.fn.validatebox.defaults.rules, {
				myvalid: {
					validator: function(value, param) {
						return /^[\u0391-\uFFE5]+$/.test(value); //其他长度注意改正则
					},
					message: '请输入正确的真实姓名'
				}
			});
		</script>
	</head>
	<body>

		<!--查询选项卡-->
		<div title="编辑员工" style="padding:10px;" data-options="closable:true">
			<div id="" style="padding: 10px; background-color: lightgray;">
				<a href="#" class="easyui-linkbutton" iconCls="icon-add" plain="true" onclick="javascript:$('#dg').edatagrid('addRow')">New</a>
				<a href="#" class="easyui-linkbutton" iconCls="icon-save" plain="true" onclick="insert()">Save</a>
				<a href="#" class="easyui-linkbutton" iconCls="icon-undo" plain="true" onclick="javascript:$('#dg').edatagrid('cancelRow')">Cancel</a>
				<font size="1px" color="red">提示：点击new进行增加员工</font>
			</div>
		</div>
			<table id="dg">
			</table>
	</body>
</html>

